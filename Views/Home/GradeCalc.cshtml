@{
    ViewBag.Title = "Grade Calculator";
    ViewBag.Page = "Grade Calculator";
}

@model GradeCalcModel

<div class="main-body">
    <form method="post">
        <h2>Grade Calculator</h2>
        <p>Input the raw number of points per grade category.</p>
        <div>
            <label>Assignments:</label>
            <input type="number" value="" asp-for="assignments"  id="assignments" />
            <div class="error">@Html.ValidationMessageFor(m => m.assignments)</div>
        </div>
        <br />
        <div>
            <label>Group Projects:</label>
            <input type="number" value="" asp-for="group" id="group-projects" />
            <div class="error">@Html.ValidationMessageFor(m => m.group)</div>
        </div>
        <br />
        <div>
            <label>Quizzes:</label>
            <input type="number" value="" asp-for="quizzes" id="quizzes" />
            <div class="error">@Html.ValidationMessageFor(m => m.quizzes)</div>
        </div>
        <br />
        <div>
            <label>Exams:</label>
            <input type="number" value="" asp-for="exams" id="exams" />
            <div class="error">@Html.ValidationMessageFor(m => m.exams)</div>
        </div>
        <br />
        <div>
            <label>INTEX:</label>
            <input type="number" value="" asp-for="intex" id="intex" />
            <div class="error">@Html.ValidationMessageFor(m => m.intex)</div>
        </div>
        <br />
        <br />
        <input type="submit" value="Calculate Grade" id="submit-button" />
    </form>
</div>